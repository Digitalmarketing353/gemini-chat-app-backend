<!-- src/views/admin/errorPage.ejs -->

<!-- You can decide if this error page itself uses the main layout or is standalone -->
<!-- Option A: Using the main layout -->
<%- include('layout', { title: title || 'Error Occurred', loggedInUser: typeof loggedInUser !== 'undefined' ? loggedInUser : null }) %>

<h1><%= message || 'An Unspecified Error Occurred' %></h1>

<% if (typeof errorDetails !== 'undefined' && errorDetails && process.env.NODE_ENV === 'development') { %>
    <p><strong>Details:</strong></p>
    <pre style="background-color: #f0f0f0; padding: 10px; border: 1px solid #ccc; white-space: pre-wrap; word-wrap: break-word;"><%= errorDetails %></pre>
<% } %>

<p><a href="/admin/dashboard">Go to Admin Dashboard</a></p>
<p><a href="javascript:history.back()">Go Back</a></p>


